<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="32dp"
    android:orientation="vertical"
    tools:context=".explain.Explain2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:paddingLeft="12dp"
            android:text="접근권한 안내"
            android:textColor="#000"
            android:textSize="36dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:paddingLeft="12dp"
            android:text="선택적 접근권한"
            android:textColor="#000"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="36px"
                android:src="@android:drawable/ic_menu_gallery"
                app:tint="@color/blue_500" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="카메라"
                    android:textColor="#000"
                    android:textSize="19dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/notosanskr_bold"
                    android:includeFontPadding="false"
                    android:paddingTop="6dp"
                    android:text="상대방의 QR코드를 검증을 위해\n카메라 기능이 사용됩니다"
                    android:textSize="18dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingVertical="12dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="36px"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="@color/blue_500" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="사진/미디어/파일"
                    android:textColor="#000"
                    android:textSize="19dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/notosanskr_bold"
                    android:includeFontPadding="false"
                    android:paddingTop="6dp"
                    android:text="프로필 사진 설정 시 이미지 파일\n첨부를 위해 권한이 요청됩니다."
                    android:textSize="18dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_error_outline_24"
                app:tint="#DF2D2D" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center|left"
                android:includeFontPadding="false"
                android:paddingLeft="12dp"
                android:text="선택적 접근 권한은 기능 사용 시\n허용이 필요하며 비 허용 시에도 해당\n기능 외 서비스 이용이 가능합니다."
                android:textSize="18dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:fontFamily="@font/notosanskr_black"
            android:includeFontPadding="false"
            android:text="확인"
            android:textColor="#fff"
            android:textSize="18dp"
            app:backgroundTint="@color/blue_500"
            app:cornerRadius="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4" />
    </LinearLayout>


</LinearLayout>