<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".login.SetPassFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 설정"
            android:textAlignment="center"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/black"
            android:textSize="24dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 6자리를 설정해주세요."
            android:textAlignment="center"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="#666"
            android:textSize="16dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_chk1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/img_chk2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/img_chk3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/img_chk4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/img_chk5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/img_chk6"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/circle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="1"
                android:textColor="#666"
                android:textSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="2"
                android:textColor="#666"
                android:textSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="3"
                android:textColor="#666"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="4"
                android:textColor="#666"

                android:textSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="5"
                android:textColor="#666"
                android:textSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="6"
                android:textColor="#666"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="7"
                android:textColor="#666"
                android:textSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="8"
                android:textColor="#666"
                android:textSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="9"
                android:textColor="#666"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="0"
                android:textColor="#666"
                android:textSize="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_left_arrow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/notosanskr_bold"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="←"
                android:textColor="#666"
                android:textSize="24dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>